<div id="nav" style="background-color: transparent;">
    <h3 class="text-center theme-color-dark font-weight-bold" style="margin-top: 5px;">Add New Course</h3>
    
    <a class="float-right btn btn-outline-primary px-3" href="/logout">Log Out</a>
  </div>

<section class="courses container">
    <div class="courses-body " id="area">
        <div class="card mx-auto" style="width: 18rem; ">
            <img src="/assets/adminCourse/<%= data.pic %>" class="card-img-top" alt="...">

            <form action="/courseImg/<%= data._id %>" class="d-none" method="POST" enctype="multipart/form-data">
                <input type="file" name="pic">
                <input type="hidden" name="oldpic" value="<%= data.pic %>">
                <input type="submit">
            </form>
            <button class="btn theme-bgcolor text-white" id="uploadFile" type="button">
                <i class="fa fa-fw fa-camera"></i>
                <span>Change Photo</span>
            </button>


            <form action="/createCourse/<%= data._id %>" method="POST">
                <div class="card-body">
                    <input type="text" id="desc" name="desc" value="<%= data.desc %>" placeholder="Course Description"><br>
                    <input type="text" id="coursename" name="title" value="<%= data.title %>" placeholder="Course Name"><br>
                    <button type="submit" id="add" class="btn btn-outline-primary px-3">Add Course</button>
                </div>
            </form>
        </div>
    </div>
</section>



<script>
    document.querySelector('#uploadFile').addEventListener('click', () => {
      document.querySelector('input[type="file"]').click();
    });
  
    document.querySelector('input[type="file"]').addEventListener('change', () => {
      document.querySelector('input[type="submit"]').click();
    });
  </script>
  