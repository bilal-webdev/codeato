<section class="courses container">
  <h1 class="theme-color-dark">Courses we love to teach</h1>
  
  <div class="courses-body">

    <% courses.forEach( list => { %>
    <div class="card" style="width: 18rem;">
      <img src="/assets/adminCourse/<%= list.pic %>" class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-text text-center"><%= list.desc %></p>
        <p class="name text-center"><%= list.title %></p>
        <% if(loggedIn) { %>
          <% if(list.subscribedBy.includes(userdata._id)) { %>
            <img src="/assets/adminCourse/subscribed.png" class="mx-auto" style="width: 32px; height: 32px;" alt="...">
          <% }else { %>
            <a class="btn btn-outline-primary px-3" href="/myclass/<%= list._id %>">Subscribe Now</a>
          <% } %>
          
        <% } %>
        
      </div>
    </div>
    <% }) %>

