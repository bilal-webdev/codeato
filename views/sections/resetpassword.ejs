<link rel="stylesheet" href="/stylesheets/sign.css">

<div class="sign-width">
  <h3 class="text-center theme-color-dark font-weight-bold">Reset your Account's Password</h3>
  <br>
  <form class="container w-75" action="/resetpassword" method="POST">
    <div class="form-group">
      <input type="password" class="form-control" name="oldpassword" id="exampleInputUsername" aria-describedby="usernameHelp"
        placeholder="Old Password">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="newpassword" id="exampleInputPassword1" placeholder="New Password">
    </div>
    <Button type="submit" class="px20 btn btn-block theme-bgcolor text-dark font-weight-bold" data-toggle="modal"
      data-target="#modalRegisterForm">Reset Password</Button>
  </form>
  <br>
</div>

