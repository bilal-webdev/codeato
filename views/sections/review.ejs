<%- include('../partials/navigation.ejs')%>
<link rel="stylesheet" href="/stylesheets/review.css">

<div class="container timeline-container pt-3">
    <h2 class="display-5">Hello, <%= user.name %> ðŸ‘‹</h2>
    <p class="lead"> <%= user.about %> </p>
    <a href="/profile" class="text-white btn theme-bgcolor">I Want To Write A Post</a>
    <hr>
    <h4 class="lead">Latest Posts</h4>
    <div class="posts mt-3">


        <% posts.forEach( post => { %>

        <div class="post">
            <div class="postTop">
                <div class="usrPrfl">
                    <img class="rounded-circle"
                        style="border-radius: 5px; background-position: center; background-size: cover; "
                        src="/images/<%= post.postedBy.avatar %>" height="40" width="40" alt="">
                </div>
                <div class="postDetails">
                    <h6><%= post.postedBy.name %></h6>
                    <small>
                        <% if(post.createdAt.getDate() < 10 ) { %>
                        0<%= post.createdAt.getDate() %>
                        <% } else { %>
                        <%= post.createdAt.getDate() %>
                        <% } %>
                        <%= post.createdAt.toLocaleString('default', {month: 'short'}) %>
                        <%= post.createdAt.getFullYear() %>,
                        <%= post.createdAt.toLocaleTimeString() %>
                    </small>
                </div>
            </div>
            <p><%= post.postText %></p>
            <small><%= post.like.length %> Likes, &nbsp;<%= post.dislike.length %> Dislikes</small>
            <div class="options">
                <!-- <span id="love" title="Love" class="icon">
                        <a href=""><i class="fa fa-heart"></i></a>
                    </span> -->
                <span id="like" title="Like" class="icon">
                    <a href="/like/<%= post._id %>"><i class="fa fa-thumbs-up"></i></a>
                </span>
                <span id="dislike" title="Dislike" class="icon">
                    <a href="/dislike/<%= post._id %>"><i class="fa fa-thumbs-down"></i></a>
                </span>
            </div>
        </div>

        <% }) %>

    </div>
</div>

<%- include('../partials/footer.ejs')%>