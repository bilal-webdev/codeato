<h3 class="text-center theme-color-dark font-weight-medium" style="margin-top: 5px;">Courses you added</h3>

<section class="courses container">

  <div class="courses-body " id="area">

    <% courses.course.forEach( list => { %>
    <div class="card" style="width: 18rem;">
      <img src="/assets/adminCourse/<%= list.pic %>" class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-text text-center"><%= list.desc %></p>
        <p class="name text-center"><%= list.title %></p>
      </div>
    </div>
    <% }) %>

  </div>
</section>
