  <!-- Sign in Form -->
  <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content signin-model-01">
        <div class="signin-model">
          <div class="in-left">
            <div class="in-left-inner">
              <h3 class="text-white font-weight-medium">Welcome Back to <br> Codeato</h3>
              <br>
              <div class="theme-bgcolor convert-line"></div>
              <br>
              <p class="text-white weight-light">Sign in to continue to your account.</p>
            </div>
          </div>
          <div class="in-right">
            <button type="button" class="close pt-3 pr-3" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <br> <br>
            <h5 class="text-center">Signin at</h5>
            <h1 class="text-center heading">Codeato</h1>
            <br>
            <form class="container" action="/signin" method="POST">
              <div class="form-group">
                <input type="text" class="form-control" name="username" id="exampleInputUsername"
                  aria-describedby="usernameHelp" placeholder="Username">
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="password" id="exampleInputPassword1"
                  placeholder="Password">
              </div>
              <a href="/forgetpassword">Forgot Password ?</a> <br>
              <a href="/admin">Signin as Admin</a><br>
              <Button type="submit" class="btn btn-block theme-bgcolor text-dark font-weight-bold"
                data-toggle="modal">Sign In</Button>
            </form>
            <br>
            <p class="text-center">Not a member yet? <a href="/signup">Sign Up</a>.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

